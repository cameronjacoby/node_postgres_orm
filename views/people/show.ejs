<% include ../partials/header %>

        <div id="circle_image"><img id="profile_image" src="<%= person.icon %>" ></div>
        <hr>

        <h3>Profile Details</h3>
        <p><strong>Full Name:</strong> <%= person.firstname %> <%= person.lastname %></p>
        <p><strong>Recent Status Update:</strong> <em><%= person.message %></em></p>
        
        <div id="social_links"><% if (person.facebook && person.facebook !== "null") { %>
          <a href="<%= person.facebook %>" target="blank"><img src="/images/facebook_icon.gif" ></a>
        <% } %> 
        <% if (person.twitter && person.twitter !== "null") { %> 
          <a href="<%= person.twitter %>" target="blank"><img src="/images/twitter_icon.gif" ></a>
        <% } %></div>
        
        <a href="/people/<%= person.id %>/edit" class="btn btn-default" id="edit_button" role="button">Edit Profile</a>
      
<% include ../partials/footer %>