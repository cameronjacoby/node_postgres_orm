<% include ../partials/header %>

        <h2>News Feed</h2>
        <table>
          <% people.forEach(function(person) { %>
            <tr>
              <td>
                <div id="circle_icon"><a href="/people/<%= person.id %>"><img id="icon_image" src="<%= person.icon %>" ></a></div>
                <div id="status">
                  <a href="/people/<%= person.id %>"><%= person.firstname %> <%= person.lastname %></a>:<br>
                  <em><%= person.message %></em>
                </div>
              </td>
            </tr>
          <% }); %>
        </table>

<% include ../partials/footer %>